<idea-plugin>
  <id>com.gjavadoc</id>
  <name>GJavaDoc</name>
  <vendor email="" url="">GJavaDoc</vendor>
  <description>Generate interface docs via call graph slicing + local LLM.</description>

  <depends>com.intellij.modules.platform</depends>
  <depends>com.intellij.java</depends>

  <extensions defaultExtensionNs="com.intellij">
    <toolWindow id="GJavaDoc" anchor="right" factoryClass="com.gjavadoc.ui.GJavaDocToolWindowFactory" canCloseContent="false" icon="/icons/toolWindow.svg"/>
    <projectConfigurable instance="com.gjavadoc.settings.GJavaDocConfigurable" id="GJavaDocSettings" displayName="GJavaDoc" parentId="tools"/>
    <projectService serviceImplementation="com.gjavadoc.settings.SettingsState"/>
    <notificationGroup id="GJavaDoc" displayType="BALLOON" isLogByDefault="true"/>
    <postStartupActivity implementation="com.gjavadoc.lifecycle.AutoResumeStartup"/>
  </extensions>

  <actions>
    <action id="com.gjavadoc.RunGJavaDocAction"
            class="com.gjavadoc.actions.RunGJavaDocAction"
            text="Run GJavaDoc"
            description="Generate docs from annotated entry points"
            icon="/icons/gjavadoc.svg">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
    <action id="com.gjavadoc.StopGJavaDocAction"
            class="com.gjavadoc.actions.StopGJavaDocAction"
            text="Stop GJavaDoc"
            description="Stop GJavaDoc queue"
            icon="/icons/gjavadoc.svg">
      <add-to-group group-id="ToolsMenu" anchor="last"/>
    </action>
  </actions>
</idea-plugin>
